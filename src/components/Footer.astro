    }

    .copyright {
        margin-bottom: unset;
        opacity: 0.8;
    }

    .footer-links-grid {
        padding: 5vh 0 9vh;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .footer-links-grid dl {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links-grid dl dt {
        margin-bottom: 0.5rem;
    }
    .footer-links-grid dl dt strong {
        font-weight: 900;
    }

    .footer-bottom-container {
        padding: 0 0 1rem 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        font-size: 1.1rem;
    }

    .copyright {
        text-align: center;
    }

    @media(min-width: 480px) {
        .footer-links-grid {
        grid-template-columns: repeat(2, 1fr);
        }
    }

    @media(min-width: 630px) {
        footer {
            padding: 0 2rem;
        }

        .footer-bottom-container {
        flex-direction: row;
        gap: unset;
        font-size: 1rem;
        }
    }

    @media(min-width: 768px) {
